{
  "manifest_version": 2,
  "name": "HolyJs SLACK",
  "version": "4.2",
  "icons": {
    "128": "./icons/icon128.png",
    "64": "./icons/icon128.png",
    "32": "./icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "activeTab", "<all_urls>"],
  "browser_action": {
    "default_icon": {
      "128": "./icons/icon128.png",
      "64": "./icons/icon128.png",
      "32": "./icons/icon128.png"
    },
    "default_popup": "./popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*",
        "https://web.telegram.org/*",
        "https://*/*"
      ],
      "js": ["entry.js"],
      "css": ["content.css"]
    }
  ]
}
